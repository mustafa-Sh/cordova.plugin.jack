<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova.plugin.jack" version="0.0.1"
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>CordovaPluginJack</name>
    <engines>
        <engine name="cordova" version=">=9.0.0"/>
    </engines>
    <!-- Javascript Bridge for Native Calls -->
    <js-module name="CordovaPluginJack" src="www/CordovaPluginJack.js">
        <clobbers target="cordova.plugins.CordovaPluginJack" />
    </js-module>
    <!-- Android Platform -->
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="CordovaPluginJack">
                <param name="android-package" value="cordova.plugin.jack.CordovaPluginJack" />
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml">
            <uses-permission android:name="android.permission.HIDE_OVERLAY_WINDOWS" />
        </config-file>
        <source-file src="src/android/CordovaPluginJack.java" target-dir="src/cordova/plugin/jack/CordovaPluginJack" />
    </platform>
    <!-- iOS Platform -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="CordovaPluginJack">
                <param name="ios-package" value="CordovaPluginJack" />
            </feature>
        </config-file>
        <source-file src="src/ios/CordovaPluginJack.h" />
        <source-file src="src/ios/CordovaPluginJack.m" />
    </platform>
    <!-- Browser Platform -->
    <platform name="browser">
        <config-file target="config.xml" parent="/*">
            <feature name="CordovaPluginJack">
                <param name="browser-package" value="CordovaPluginJack" />
            </feature>
        </config-file>

        <js-module src="src/browser/CordovaPluginJack.js" name="CordovaPluginJack">
            <runs />
        </js-module>
    </platform>
</plugin>